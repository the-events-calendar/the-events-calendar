/**
 * Event Links block view styles
 *
 * @since  0.2.4-alpha
 */
.tribe-block__events-link {
	display: flex;
	flex-wrap: wrap;

	.tribe-block__btn--link {
		align-items: center;
		background-color: transparent;
		display: inline-flex;
		justify-content: center;

		a {
			align-items: center;
			background-color: #fff;
			border: 1px solid #e1e3e6;
			color: #009fd4;
			display: inline-flex;
			font-size: 1rem;
			font-weight: bold;
			justify-content: center;
			margin: 10px 15px 10px 0;
			min-height: 38px;
			padding: 0 17px 0 14px;
		}

		img {
			flex: none;
			margin-bottom: 2px;
			margin-right: 7px;
		}
	}
}
