.tribe-events {
	/* -----------------------------------------------------------------------------
	 *
	 * Navigation
	 *
	 * Example:
	 * <nav class="tribe-events-c-nav">
	 *   <ul class="tribe-events-c-nav__list">
	 *     <li class="tribe-events-c-nav__list-item">
	 *       <a href="#" class="tribe-events-c-nav__prev">
	 *         <?php $this->template( 'components/icons/caret-left', [ 'classes' => [ 'tribe-events-c-nav__prev-icon-svg' ] ] ); ?>
	 *         Previous
	 *       </a>
	 *       <a href="#" class="tribe-events-c-nav__next">
	 *         Next
	 *         <?php $this->template( 'components/icons/caret-right', [ 'classes' => [ 'tribe-events-c-nav__next-icon-svg' ] ] ); ?>
	 *       </a>
	 *     </li>
	 *   </ul>
	 * </nav>
	 *
	 * ----------------------------------------------------------------------------- */

	.tribe-events-c-nav {
		padding-top: var(--tec-spacer-4);

		.tribe-common--breakpoint-medium& {
			padding-top: var(--tec-spacer-6);
		}
	}

	.tribe-events-c-nav__list {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		width: 100%;
	}

	.tribe-events-c-nav__list-item {
		display: flex;
		width: 33.33%;

		.tribe-common--breakpoint-medium& {
			width: 50%;
		}
	}

	.tribe-events-c-nav__list-item--prev {
		justify-content: flex-start;
	}

	.tribe-events-c-nav__list-item--next {
		justify-content: flex-end;
	}

	.tribe-events-c-nav__list-item--today {
		justify-content: center;

		.tribe-common--breakpoint-medium& {
			@mixin hidden;
		}
	}

	.tribe-events-c-nav__prev-label-plural,
	.tribe-events-c-nav__next-label-plural {

		.tribe-common--breakpoint-medium& {
			@mixin visually-show;
		}
	}

	.tribe-events-c-nav__prev,
	.tribe-events-c-nav__next {
		align-items: center;
		display: flex;
		flex: none;
		flex-wrap: wrap;
		justify-content: center;
	}

	.tribe-events-c-nav__prev-icon-svg,
	.tribe-events-c-nav__next-icon-svg {
		display: none;
	}
}
