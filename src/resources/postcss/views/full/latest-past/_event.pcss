.tribe-events {
	/* -----------------------------------------------------------------------------
	 * Event
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-latest-past__event-row--featured {

		.tribe-events-calendar-latest-past__event-date-tag-datetime {

			&:after {
				background-color: var(--tec-color-accent-primary);
				content: '';
				height: 100%;
				position: absolute;
				right: calc(100% - 3px);
				width: 3px;

				.tribe-common--breakpoint-medium& {
					right: -1px;
					width: 4px;
				}
			}
		}
	}

	.tribe-events-calendar-latest-past__event-venue {
		font-style: normal;
	}

	.tribe-events-calendar-latest-past__event-date-tag-month,
	.tribe-events-calendar-latest-past__event-date-tag-year {
		@mixin mobile-body-3;
	}

	.tribe-events-calendar-latest-past__event-date-tag-month {
		color: var(--tec-color-text-secondary);
		text-transform: uppercase;
	}

	.tribe-events-calendar-latest-past__event-featured-image-link {
		transition: var(--tec-transition-opacity);

		&:hover,
		&:focus {
			opacity: var(--tec-opacity-icon-hover);
		}

		&:active {
			opacity: var(--tec-opacity-icon-active);
		}
	}

	.tribe-events-calendar-latest-past__event-datetime {
		color: var(--tec-color-text-event-date);
	}

	.tribe-events-calendar-latest-past__event-datetime-featured-text {

		.tribe-common--breakpoint-medium& {
			color: var(--tec-color-accent-primary);
			font-weight: var(--tec-font-weight-bold);
		}
	}

	.tribe-events-calendar-latest-past__event-title {
		color: var(--tec-color-text-events-title-latest-past);
	}

	.tribe-events-calendar-latest-past__event-title-link {
		@mixin event-title-link-color;
	}
}
