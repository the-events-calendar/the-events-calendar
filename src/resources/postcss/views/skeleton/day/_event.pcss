.tribe-events {
	/* -----------------------------------------------------------------------------
	 * Event
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-day__event {
		margin-bottom: var(--tec-spacer-5);
		margin-top: var(--tec-spacer-7);
		padding-left: 54px;

		.tribe-common--breakpoint-medium& {
			margin-bottom: var(--tec-spacer-8);
			margin-top: var(--tec-spacer-9);
			padding-left: 0;
		}

		&:last-child {
			margin-bottom: var(--tec-spacer-8);

			.tribe-common--breakpoint-medium& {
				margin-bottom: var(--tec-spacer-11);
			}
		}

		&:before {

			.tribe-common--breakpoint-medium& {
				content: '';
				min-width: 90px;
				width: var(--tec-grid-width-1-of-9);
			}
		}
	}

	.tribe-events-calendar-day__time-separator + .tribe-events-calendar-day__event,
	.tribe-events-calendar-day__type-separator + .tribe-events-calendar-day__event {
		margin-top: var(--tec-spacer-4);

		.tribe-common--breakpoint-medium& {
			margin-top: var(--tec-spacer-8);
		}
	}

	.tribe-events-calendar-day__event-content {
		flex: none;

		.tribe-common--breakpoint-medium& {
			display: flex;
			flex: 1 1 calc(8 * var(--tec-grid-width-1-of-9));
			flex-direction: row-reverse;
			justify-content: flex-end;
			margin-left: var(--tec-grid-gutter-half-negative);
			margin-right: var(--tec-grid-gutter-half-negative);
		}

		& > * {

			.tribe-common--breakpoint-medium& {
				padding-left: var(--tec-grid-gutter-half);
				padding-right: var(--tec-grid-gutter-half);
			}
		}
	}

	.tribe-events-calendar-day__event-featured-image-wrapper {
		margin-bottom: var(--tec-spacer-3);

		.tribe-common--breakpoint-medium& {
			flex: none;
			margin-bottom: 0;
			width: calc(3 * var(--tec-grid-width-1-of-8));
		}
	}

	.tribe-events-calendar-day__event-featured-image-link,
	.tribe-events-calendar-list__event-featured-image {
		display: block;
	}

	.tribe-events-calendar-day__event-details {
		position: relative;

		.tribe-common--breakpoint-medium& {
			flex: none;
			width: calc(5 * var(--tec-grid-width-1-of-8));
		}
	}

	.tribe-events-calendar-day__event-header {

		> *:last-child {
			margin-bottom: 0;
		}
	}

	.tribe-events-calendar-day__event-datetime-wrapper,
	.tribe-events-calendar-day__event-title {
		margin: 0 0 var(--tec-spacer-1);

		.tribe-common--breakpoint-medium& {
			margin: 0 0 var(--tec-spacer-3);
		}

		&:last-child {
			margin-bottom: 0;
		}
	}

	.tribe-events-calendar-day__event-datetime-featured-icon {
		display: inline-block;
		margin-right: var(--tec-spacer-0);
	}

	.tribe-events-calendar-day__event-datetime-featured-text {

		.tribe-common--breakpoint-medium& {
			@mixin visually-show;

			margin-right: var(--tec-spacer-1);
		}
	}

	.tribe-events-calendar-day__event-venue {
		margin-bottom: var(--tec-spacer-1);

		.tribe-common--breakpoint-medium& {
			margin-bottom: var(--tec-spacer-3);
		}
	}

	.tribe-events-calendar-day__event-description {

		.tribe-common--breakpoint-medium& {
			display: block !important;
			margin-top: var(--tec-spacer-3);
			visibility: visible;
		}
	}

	.tribe-events-calendar-day__event-cost {
		margin-top: var(--tec-spacer-2);

		.tribe-common--breakpoint-medium& {
			margin-top: var(--tec-spacer-3);
		}
	}

	/* -------------------------------------------------------------------------
	 * Theme Overrides - Twenty Nineteen
	 * ------------------------------------------------------------------------- */

	.tribe-theme-twentynineteen & {

		.entry.tribe-events-calendar-day__event {
			margin-bottom: var(--tec-spacer-5);
			margin-top: var(--tec-spacer-7);
			padding-left: 54px;

			&:last-child {
				margin-bottom: var(--tec-spacer-8);
			}
		}

		&.tribe-common--breakpoint-medium .entry.tribe-events-calendar-day__event {
			margin-bottom: var(--tec-spacer-8);
			margin-top: var(--tec-spacer-9);
			padding-left: 0;

			&:last-child {
				margin-bottom: var(--tec-spacer-11);
			}
		}

		.tribe-events-calendar-day__time-separator + .entry.tribe-events-calendar-day__event,
		.tribe-events-calendar-day__type-separator + .entry.tribe-events-calendar-day__event {
			margin-top: var(--tec-spacer-4);
		}

		&.tribe-common--breakpoint-medium {

			.tribe-events-calendar-day__time-separator + .entry.tribe-events-calendar-day__event,
			.tribe-events-calendar-day__type-separator + .entry.tribe-events-calendar-day__event {
				margin-top: var(--tec-spacer-8);
			}
		}
	}
}
