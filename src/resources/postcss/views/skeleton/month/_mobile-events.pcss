.tribe-events {
	/* -----------------------------------------------------------------------------
	 * Mobile Events
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-month-mobile-events {

		.tribe-common--breakpoint-medium& {
			@mixin hidden;
		}
	}

	.tribe-events-calendar-month-mobile-events__mobile-day {
		display: none;
	}

	.tribe-events-calendar-month-mobile-events__mobile-day--show {
		display: block;
	}

	.tribe-events-calendar-month-mobile-events__day-marker {
		padding-top: var(--tec-spacer-3);
	}

	.tribe-events-calendar-month-mobile-events__mobile-event {
		padding: var(--tec-spacer-2) 0;
	}

	.tribe-events-calendar-month-mobile-events__mobile-event--featured {
		padding-bottom: var(--tec-spacer-4);
	}

	.tribe-events-calendar-month-mobile-events__mobile-event-featured-image-wrapper {
		margin-bottom: var(--tec-spacer-2);
	}

	.tribe-events-calendar-month-mobile-events__mobile-event-datetime {
		margin-bottom: var(--tec-spacer-0);

		> * {
			vertical-align: middle;
		}
	}

	.tribe-events-calendar-month-mobile-events__mobile-event-datetime-featured-icon {
		display: inline-block;
		line-height: 0;
		margin-right: var(--tec-spacer-0);
	}

	.tribe-events-calendar-month-mobile-events__mobile-event-datetime-featured-text {
		margin-right: var(--tec-spacer-1);
	}

	.tribe-events-calendar-month-mobile-events__mobile-event-title {
		margin: 0;
	}

	.tribe-events-calendar-month-mobile-events__mobile-event-cost {
		margin-top: var(--tec-spacer-1);
	}

	.tribe-events-calendar-month-mobile-events__more-events {
		padding: var(--tec-spacer-0) 0 var(--tec-spacer-4) 0;
	}
}
