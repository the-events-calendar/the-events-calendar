/* Debug Bar and Support Form */
#debug-bar-tribe {
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	li {
		background-color: #f4f4f4;
		border: #eee solid 1px;
		display: block;
		margin-bottom: 6px;
		padding: 0;

		&.tribe-debug-warning,
		&.tribe-debug-notice {
			background-color: #fffcee;
			border: #e6db55 solid 1px;

			.tribe-debug-entry-title {
				background-color: #e6db55;
			}
		}

		&.tribe-debug-error {
			background-color: #fee;
			border: #d66 solid 1px;

			.tribe-debug-entry-title {
				background-color: #d66;
			}
		}

		.tribe-debug-entry-title {
			background-color: #eee;
			font-weight: bold;
			margin: 0;
			padding: 10px;
		}

		.tribe-debug-entry-data {
			padding: 10px;
		}

		.tribe-support-form {
			background: none;
			border: none;
			margin: 0;
			padding: 0;
			width: 100%;

			h3 {
				background-color: #eee;
				font-weight: bold;
				margin: -10px;
				padding: 10px;
			}
		}
	}
}

.tribe-support-form {
	background-color: #efefef;
	border: #eee solid 1px;
	padding: 10px;
	width: 98%;
}

.tribe-support-form-description textarea {
	height: 200px;
	width: 100%;
}

.tribe-support-form-submit input {
	margin-top: 10px;
	padding: 10px;
}
