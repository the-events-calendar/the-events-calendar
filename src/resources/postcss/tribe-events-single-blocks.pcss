		.tribe-block__venue__phone,
		.tribe-block__venue__website {
			font-size: 1.65rem;
		}

		.tribe-block__venue__website a {
			color: var(--tec-color-link-accent);
		}
	}

	/* Organizer block view styles */
	.tribe-block__organizer__details {
		h3,
		p {
