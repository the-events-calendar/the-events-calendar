{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./plugins",
        "paths": {
            "@moderntribe/*": ["./*/src/modules"]
        }
    },
    "include": [
        "plugins"
    ],
    "exclude": [
        "**/node_modules/*",
        "**/resources/*",
        "**/Tribe/*"
    ]
}